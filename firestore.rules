rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isSuperAdmin() {
      // Note: This relies on custom claims.
      return request.auth.token.role == 'Super Admin';
    }

    function isAdmin() {
      // Note: This relies on custom claims.
      return request.auth.token.role == 'Admin' || isSuperAdmin();
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // A user can read/write to their own user profile document.
    match /users/{userId} {
      allow read, write: if isOwner(userId);
    }
    
    match /companies/{companyId} {
      allow read: if request.auth != null;
      allow write: if isSuperAdmin();
    }

    match /employees/{employeeId} {
      // Any authenticated user can list or read employee profiles.
      allow list, read: if request.auth != null;
      
      // Admins can create employee profiles.
      allow create: if isAdmin();

      // An employee can update their own profile, or an admin can update any profile.
      allow update, delete: if isOwner(get(/databases/$(database)/documents/employees/$(employeeId)).data.uid) || isAdmin();
    }
    
    match /projects/{projectId} {
      // Only Admins can manage projects.
      allow read, write: if isAdmin();
    }
    
    match /audit_logs/{logId} {
      // Any authenticated user can create audit logs (e.g., for logout).
      allow create: if request.auth != null;
      // Only admins can read audit logs.
      allow read: if isAdmin();
    }
  }
}