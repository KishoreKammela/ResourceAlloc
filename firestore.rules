rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Helper functions
    function isSuperAdmin() {
      return request.auth.token.role == 'Super Admin';
    }
    
    function isAdmin() {
      return request.auth.token.role == 'Admin' || request.auth.token.role == 'Super Admin';
    }

    // Users collection
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId || isAdmin();
    }

    // Companies collection
    match /companies/{companyId} {
      allow read, write: if isAdmin();
    }

    // Employees collection
    match /employees/{employeeId} {
      allow list: if request.auth != null;
      allow read: if request.auth.uid == resource.data.uid || isAdmin();
      allow create: if isAdmin();
      allow update, delete: if request.auth.uid == resource.data.uid || isAdmin();
    }

    // Projects collection
    match /projects/{projectId} {
      allow read, list, create, update, delete: if isAdmin();
    }

    // Audit Logs collection
    match /audit_logs/{logId} {
      allow read: if isAdmin();
      allow create: if request.auth != null;
    }
  }
}
