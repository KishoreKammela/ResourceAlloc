rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isSuperAdmin() {
      return request.auth.token.role == 'Super Admin';
    }

    function isAdmin() {
      return request.auth.token.role in ['Admin', 'Super Admin'];
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Users collection
    match /users/{userId} {
      allow read: if isOwner(userId) || isSuperAdmin();
      allow create: if request.auth != null;
      allow update: if isOwner(userId) || isSuperAdmin();
      allow delete: if isSuperAdmin();
    }
    
    // Employees collection
    match /employees/{employeeId} {
      allow list: if isAdmin();
      allow read: if request.auth != null;
      allow create: if isAdmin();
      allow update, delete: if isAdmin() || isOwner(resource.data.uid);
    }
    
    // Projects collection
    match /projects/{projectId} {
      allow read, list, create, update, delete: if isAdmin();
    }

    // Companies collection
    match /companies/{companyId} {
      allow read, create, update, delete: if isAdmin();
    }

    // Audit logs collection
    match /audit_logs/{logId} {
      // Only admins can read logs. All authenticated users can write them.
      allow read: if isAdmin();
      allow create: if request.auth != null;
    }
  }
}
