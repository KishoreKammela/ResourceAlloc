rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check for admin roles
    function isAdmin() {
      return request.auth.token.role in ['Admin', 'Super Admin'];
    }

    match /employees/{employeeId} {
      // Allow any authenticated user to list employees.
      allow list: if request.auth != null;
      
      // Allow admins to create any employee. A user can create their own profile.
      allow create: if request.auth != null && (isAdmin() || request.auth.uid == request.resource.data.uid);

      // Allow full access to admins or the user who owns the document.
      allow read, update, delete: if request.auth != null && (isAdmin() || request.auth.uid == resource.data.uid);
    }

    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
    }

    match /companies/{companyId} {
      allow read, write: if request.auth != null; // Simplistic rule for now
    }
    
    match /audit_logs/{logId} {
      allow create: if request.auth != null;
      allow read, list, update, delete: if false; // Logs are immutable
    }
  }
}
