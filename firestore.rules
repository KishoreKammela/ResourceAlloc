
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow anyone to create a company and their own user profile during signup
    match /companies/{companyId} {
      allow create: if true;
      allow read, update, delete: if request.auth != null;
    }
    
    match /users/{userId} {
      allow create: if request.auth.uid == userId;
      allow read, update, delete: if request.auth.uid == userId;
    }

    // Allow admin users to manage all users within their company
    match /users/{userId} {
      allow read, list: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['Admin', 'Super Admin'];
    }

    // Allow audit logs to be created by anyone (for signup) and read by admins
    match /audit_logs/{logId} {
      allow create: if true;
      allow read: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['Admin', 'Super Admin'];
    }

    // Secure other collections by default
    match /employees/{employeeId} {
      allow read, create, update, delete: if request.auth != null;
    }

    match /projects/{projectId} {
      allow read, create, update, delete: if request.auth != null;
    }

    match /invitations/{invitationId} {
       allow create, read, update, delete: if request.auth != null;
    }
  }
}
